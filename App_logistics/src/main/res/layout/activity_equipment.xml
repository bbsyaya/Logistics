                app:opetation_title="@string/operation_11_title" />

            <com.jintoufs.logstics.widget.OperationView
                android:id="@+id/operation_12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:bg="@color/seashell"
                app:opetation_status="0"
                app:opetation_tip="@string/operation_12_tip"
                app:opetation_title="@string/operation_12_title" />

