                app:opetation_title="@string/operation_2_title" />

            <com.jintoufs.logstics.widget.OperationView
                android:id="@+id/operation_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:bg="@color/seashell"
                app:opetation_status="0"
                app:opetation_tip="operation_5_tip"
                app:opetation_title="@string/operation_3_title" />

            <com.jintoufs.logstics.widget.OperationView
