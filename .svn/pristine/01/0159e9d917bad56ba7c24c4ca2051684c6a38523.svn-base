<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="@color/bg_touch"
                android:gravity="center_vertical"
                android:paddingTop="5dp">

    <TextView
        android:id="@+id/operation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/module1"
        android:textColor="@color/black"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/operation_title"
        android:layout_below="@id/operation_title"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/operation_warning"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.7"
            android:background="@drawable/about"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/operation_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:alpha="0.7"
            android:gravity="center_vertical"
            android:text="@string/module1"
            android:textColor="@color/black"
            android:textSize="13sp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/operation_action"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_radio_off"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="@color/black"/>

</RelativeLayout>