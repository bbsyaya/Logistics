<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget36"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/login_passwd_edit"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/login_editbox"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:padding="13dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/validate_code_tip_tv"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:maxLength="12"
        android:padding="13dp"
        android:singleLine="true"
        android:text="@string/validate_code_tip"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.jintoufs.logstics.widget.SendValidateButton
        android:id="@+id/btn_sendCode"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_style_validate"
        android:text="@string/send_verification_code"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

</TableLayout>